<scenarios xmlns="http://www.xoev.de/de/validator/framework/1/scenarios" frameworkVersion="1.0.0">
    <name>Validator Configuration eForms-DE @eForms-DE.version@</name>
    <author>Coordination Office for IT Standards (KoSIT)</author>
    <date>2022-07-07</date>
    <description>
        <p>Checks whether XML Documents conform to eForms-DE specification
        @eForms-DE.version@
            </p>
        <p>It uses eForms-SDK Schematron rules of 
            in version @cen.rules.version@ from @build.date@
            </p>
    </description>

    <scenario>
        <name>eForms-DE Contract Award Notice</name>
        <description>
            <p>Validates UBL  in version @ubl.version@</p>
        </description>

        <match>/*:ContractAwardNotice</match>

        <validateWithXmlSchema>
            <resource>
                <name>XML Schema for UBL 2.3 ContractAwardNotice</name>
                <location>xsd/ubl/2.3/maindoc/UBL-ContractAwardNotice-2.3.xsd</location>
            </resource>
        </validateWithXmlSchema>
        <validateWithSchematron>
            <resource>
                <name>Schematron rules</name>
                <location>eforms-sdk/eforms-de-schematron-validator-0.5.0.xsl</location>
            </resource>
        </validateWithSchematron>
        <createReport>
            <resource>
                <name>Validation report</name>
                <location>default-report.xsl</location>
            </resource>
        </createReport>

        <acceptMatch>/*</acceptMatch>
    </scenario>
    <scenario>
        <name>eForms-DE Contract Notice</name>
        <description>
            <p>Validates UBL  in version @ubl.version@</p>
        </description>


        <match>/*:ContractNotice</match>

        <validateWithXmlSchema>
            <resource>
                <name>XML Schema for UBL 2.1 ContractNotice</name>
                <location>xsd/ubl/2.3/maindoc/UBL-ContractNotice-2.3.xsd</location>
            </resource>
        </validateWithXmlSchema>
        <validateWithSchematron>
            <resource>
                <name>Schematron rules</name>
                <location>eforms-sdk/eforms-de-schematron-validator-0.5.0.xsl</location>
            </resource>
        </validateWithSchematron>
        <createReport>
            <resource>
                <name>Validation report</name>
                <location>default-report.xsl</location>
            </resource>
        </createReport>

        <acceptMatch>/*</acceptMatch>
    </scenario>
    <scenario>
        <name>eForms-DE Prior Information Notice</name>
        <description>
            <p>Validates UBL  in version @ubl.version@</p>
        </description>


        <match>/*:PriorInformationNotice</match>

        <validateWithXmlSchema>
            <resource>
                <name>XML Schema for UBL 2.3 PriorInformationNotice</name>
                <location>xsd/ubl/2.3/maindoc/UBL-PriorInformationNotice-2.3.xsd</location>
            </resource>
        </validateWithXmlSchema>
        <validateWithSchematron>
            <resource>
                <name>Schematron rules</name>
                <location>eforms-sdk/eforms-de-schematron-validator-0.5.0.xsl</location>
            </resource>
        </validateWithSchematron>
        <createReport>
            <resource>
                <name>Validation report</name>
                <location>default-report.xsl</location>
            </resource>
        </createReport>

        <acceptMatch>/*</acceptMatch>
    </scenario>

    <!-- In case none of the aboce scenarios matched/were applied -->
    <noScenarioReport>
        <resource>
            <name>Default Report</name>
            <location>default-report.xsl</location>
        </resource>
    </noScenarioReport>

</scenarios>
